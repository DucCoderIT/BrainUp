<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:padding="16dp"
    tools:context=".Activities.GameSelectActivity">
    <TextView
        android:id="@+id/tv_countdowntime_S"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:text="Bạn còn 15 s"
        android:textSize="15sp"
        android:textStyle="bold"
        android:gravity="center_vertical|start"
        />
    <ImageView
        android:id="@+id/imgview_game"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:scaleType="fitXY"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="30dp"
            android:weightSum="3">
            <RadioButton
                android:id="@+id/rdbtn_result1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <RadioButton
                android:id="@+id/rdbtn_result2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <RadioButton
                android:id="@+id/rdbtn_result3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </RadioGroup>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>
    <Button
        android:id="@+id/btn_sendresult"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="GỬI KẾT QUẢ"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="#621663"/>
</LinearLayout>