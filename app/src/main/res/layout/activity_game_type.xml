<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".Activities.GameTypeActivity">
    <!-- text: select category -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="SELECT CATEGORY"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <!-- view categories -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:padding="20dp"
        android:orientation="vertical"
        android:weightSum="3"
        android:background="#fff000">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">
            <ImageButton
                android:id="@+id/imgbtn_animals"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@raw/animals"
                android:background="#00000000"/>
            <ImageButton
                android:id="@+id/imgbtn_vehicle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@raw/vehicle"
                android:background="#00000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">
            <ImageButton
                android:id="@+id/imgbtn_house"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@raw/house"
                android:background="#00000000"/>
            <ImageButton
                android:id="@+id/imgbtn_sport"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@raw/sport"
                android:background="#00000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">
            <ImageButton
                android:id="@+id/imgbtn_school"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@raw/school"
                android:background="#00000000"/>
            <ImageButton
                android:id="@+id/imgbtn_vegetables"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@raw/vegetable"
                android:background="#00000000"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>