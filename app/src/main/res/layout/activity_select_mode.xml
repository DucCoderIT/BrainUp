<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/backgroundgame">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:text="@string/select_mode"
        android:textColor="@color/ButtonExit"
        android:textSize="40sp"
        android:textStyle="bold"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnSelectType"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="SELECT"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:background="@color/ButtonPlay"
            android:onClick="selectType"/>
        <Button
            android:id="@+id/btnWriteType"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="WRITE"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:background="@color/ButtonScore"
            android:onClick="writeType"/>
    </LinearLayout>

</LinearLayout>